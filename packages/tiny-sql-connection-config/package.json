{
  "name": "@australis/tiny-sql-connection-config",
  "version": "1.0.0-0",
  "description": "It provides ms-sql/tedious connection config from connection-string from env key.",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --ci --env=node",
    "build": "tsc -p .",
    "clean": "rimraf lib",
    "rebuild": "npm run clean && npm run build",
    "set-private": "node ../../scripts/set-private.js --value=true",
    "set-public": "node ../../scripts/set-private.js --value=false",
    "publishit":  "npm run set-public && echo npm publish --access public && npm run set-private"
  },
  "keywords": [],
  "author": "daniel@australis-technica.com",
  "license": "MIT",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@australis/parse-sql-connection-string": "latest"
  },
  "devDependencies": {
    "@types/tedious": "^1.8.33",
    "jest": "22.4.3",
    "rimraf": "^2.6.2",
    "ts-jest": "22.4.4",
    "ts-node": "^5.0.0",
    "typescript": "2.9.2"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/australis-technica/sql-connection-config.git"
  },
  "bugs": {
    "url": "https://github.com/australis-technica/sql-connection-config/issues"
  },
  "homepage": "https://github.com/australis-technica/sql-connection-config#readme"
}
